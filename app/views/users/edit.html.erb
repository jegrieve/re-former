<h1> User Edit: </h1>

<%= form_for @user do |f| %>
    <% if @user.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@user.errors.count, "error") %> 
        prohibited this user from being edited</h2>
  
        <ul>
          <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <%= f.label :username %>:
    <%= f.text_field :username, value: "JohnCena111" %><br>
  
    <%= f.label :email %>:
    <%= f.email_field :email, placeholder: "JohnCena@cantseeme.com" %><br>
  
    <%= f.label :password %>:
    <%= f.password_field :password %><br>
  
    <%= f.submit %>
  <% end %>